<div class="bg">
  <div class="box">
    <div class="box-inner">
      <%= form_with model: @user, url: user_session_path, id: 'new_user',  class: 'new_user', local: true do |f| %>
      <% flash.each do |message_type, message| %>
        <%= content_tag :div, message, class: message_type %>
      <% end %>
      <h1>ログイン</h1>
      <div class="box-email">
        <%= f.label :email, "Eメール" %><br />
        <%= f.text_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="box-password">
        <div class="a-row">
          <div class="column-left">
            <%= f.label :password, "パスワード" %>
          </div>
          <div class="column-right">
            <%= link_to "パスワードを忘れた場合", new_user_password_path %>
          </div>
        </div>
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>
      <div class="box-login">
        <%= f.submit "ログイン" %>
        <% if devise_mapping.rememberable? %>
        <div class="remenber">
          <%= f.check_box :remenber_me %>
          <%= f.label :remenber, "ログインしたままにする" %>
        </div>
        <% end %>
      </div>
      <% end %>



      <div class="box-newusr">
        <p><span>------------</span> 新しいお客様ですか？ <span>------------</span></p>
        <%= link_to "新規登録", new_user_registration_path %>
      </div>
    </div>
  </div>
</div>